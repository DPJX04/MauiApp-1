                    BorderColor="#DDDDDD"
                    BorderWidth="1"
                    TextColor="#333333"
                    Margin="0,0,10,0"/>
            
            <!-- Adoption Button -->
            <Button Grid.Column="1"
                    Text="Adoption"
                    FontSize="16"
                    BackgroundColor="#FFC107"
                    TextColor="#333333"
                    CornerRadius="25"/>
        </Grid>

        <!-- Bottom Navigation Bar -->
         <BoxView Grid.Row="7"
                  Grid.ColumnSpan="2"
                  HeightRequest="30"
                  BackgroundColor="Black"/>
    </Grid>

</ContentPage>

